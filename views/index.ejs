<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Trade Ark</title>
</head>
<body>
    <h1>test</h1>
    <% if (loggedin) { %>
        <a href="/account"><%= username %></a>
        <br>
        <br>
        <a href="/account/logout">Log out</a>
    <% } else { %>
        <a href="/account/login">Login</a>
        <br>
        <br>
        <a href="/account/register">Register</a>
    <% } %>
    <div id="items_for_sale">

    </div>

    <script>
        let xhr = new XMLHttpRequest();
        xhr.open("GET", "/item/range?id_start=1&id_end=10");
        //xhr.setRequestHeader('Content-type', 'application/json; charset=utf-8');
        xhr.send();

        xhr.onload = function () {
            let item_display = document.getElementById("items_for_sale");
            let items = JSON.parse(xhr.response);
            console.log(items);
            for (let i=0; i<items.length; i++) {
                let anchor = document.createElement("a");
                anchor.href = `/item?item_id=${items[i].item_id}`;
                anchor.innerText = items[i].item_name;
                item_display.append(anchor);
            }
        }
    </script>
</body>
</html>
